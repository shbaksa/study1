<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
	<script>
		function check(){
			alert();
		}
		function change(){
			alert();
		}
	</script>
</head>
<body>	<!-- change.jsp : change이벤트 : 값이 변경되었을때 -->
	
	<input type="text" onchange="check()" value="abcd"> <p>
	<hr>
	<!-- change 이벤트는 거의 select태그에서 주로 사용한다. -->
	<form name="pkc">
	<select onchange="change()"> <!-- select 태그에서 현재의 option태그를 변경하면 발생 -->
		<option> 1000원 </option>
		<option> 2000원 </option>
		<option> 3000원 </option>
		<option> 4000원 </option>
	</select>
	</form>
</body>
</html>